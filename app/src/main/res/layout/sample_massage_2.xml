<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_gravity="start"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/massage_user_img_id"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_head"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/massage_2_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_1"
                android:backgroundTint="#FFE9C8"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/massage_user_name_id"
                    android:background="@drawable/ripple_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/diu_blue_dark"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/massage_2_massage_textvw_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="."
                    />
                <TextView
                    android:id="@+id/massage_2_time_textvw_id"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/grey"
                    android:textSize="11dp"
                    android:text="10.30pm"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>